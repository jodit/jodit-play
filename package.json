{
  "name": "jodit-play",
  "version": "0.1.79",
  "dependencies": {
    "history": "^4.10.1",
    "react-color": "^2.18.1",
    "tinycolor2": "^1.4.1"
  },
  "scripts": {
    "doc": "typedoc --mode modules  --module umd --json ./public/data.json --ignoreCompilerErrors --tsconfig ./node_modules/jodit/tsconfig.json ./node_modules/jodit/src/",
    "build-rename": "npm run build-rename-js && npm run build-rename-css",
    "build-rename-js": "renamer --regex --find 'main\\.[^\\.]+\\.js(\\.map)?' --replace \"main.js$1\" build/static/js/*",
    "build-rename-css": "renamer --regex --find \"main\\.[^\\.]+\\.css(\\.map)?\"  --replace \"main.css$1\" build/static/css/*",
    "newversion": "npm update && npm run build && npm version patch --no-git-tag-version && npm run github && npm publish ./",
    "github": "git add --all  && git commit -m \"New version $npm_package_version. Read more https://github.com/jodit/jodit-docs/releases/tag/$npm_package_version \" && git tag $npm_package_version && git push --tags origin HEAD:master",
    "start": "react-app-rewired  start",
    "build": "react-app-rewired  build && npm run build-rename",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "homepage": "./",
  "browserslist": {
    "development": [
      "last 2 chrome versions",
      "last 2 firefox versions",
      "last 2 edge versions"
    ],
    "production": [
      ">1%",
      "last 4 versions",
      "Firefox ESR",
      "not ie < 11"
    ]
  },
  "devDependencies": {
    "jodit": "^3.4.20",
    "jodit-react": "^1.0.56",
    "react": "^16.13.1",
    "react-app-rewired": "^1.6.2",
    "react-dom": "^16.13.1",
    "react-scripts": "2.0.0-next.47d2d941",
    "react-syntax-highlighter": "^7.0.4",
    "react-toggle": "^4.1.1",
    "renamer": "^0.6.1",
    "typedoc": "^0.10.0"
  }
}
